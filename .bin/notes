#!/bin/bash

NOTES_DIR="$HOME/.notes"
NOTES="$NOTES_DIR/index.md"

mkdir -p "$NOTES_DIR"
cd "$NOTES_DIR"
if [ -t 0 ] && [ "$#" -eq 0 ]; then
	if [ -r "$NOTES" ]; then
		exec tmux-pane vim -o "$NOTES" -c "call Notes()"
	else 
		echo "$NOTES: No such file or directory"
	fi
else 
	exec cat >> "$NOTES"
fi
