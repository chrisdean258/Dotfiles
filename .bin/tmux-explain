#!/bin/sh

echo "<C-a>R -- reload configuration"
echo ""
echo "<C-a><scape> -- move to next window"
echo "<c-a><bspace> -- previous-layout"
echo "<c-a><enter> -- next-layout"
echo ""
echo "<c-a>v -- Vertical split"
echo "<c-a>s -- Horizontal split"
echo ""
echo "<c-a>= -- equalize panes"
echo "<c-a>- -- decrease panel size"
echo "<c-a>+ -- increase panel size"
echo "<C-h> -- Make pane bigger"
echo "<C-j> -- Next window"
echo "<C-k> -- Previous window"
echo ""
echo "<C-space> -- resize-pane -Z"
echo "<C-x> -- clear all screens"
echo "<C-d> -- EOF"
echo ""
