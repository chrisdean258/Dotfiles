#!/bin/bash

exe() { [ -x "$(command -v "$1")" ]; }

! exe xdg-open && exec /usr/bin/open "$@"


if exe xdotool; then 
	id=$(xdotool getactivewindow)
	xdotool windowunmap "$id"
	xdotool windowunmap "$id"
	xdotool windowunmap "$id"
fi

while [ $# -gt 0 ]; do
	if exe xdo; then
		xdg-open "$1"
	else
		xdg-open "$1" >/dev/null 2>&1
	fi
	shift
done 

if exe xdotool; then 
	xdotool windowmap "$id"
	xdotool windowmap "$id"
	xdotool windowmap "$id"
fi
