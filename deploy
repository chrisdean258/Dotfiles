#!/bin/bash

deploy()
{
	for file in $1/*; do
		echo $file
		if [ -f $file ]; then
			rm -rf ~/.`basename $file`
			ln $file ~/.`basename $file`
		fi
	done

}

shell="${1:-bash}"

rm -f ~/bin/dots
ln dots ~/bin/dots
mkdir -p ~/bin
rm -rf ~/bin/git
ln -s `realpath .`/git_scripts ~/bin/git

deploy universal
deploy $shell
