alias c="clear"

alias bashrc=". ~/.bashrc"

alias python="python3"

alias xcut="xclip -sel clip"
alias xpaste="xclip -o -sel clip"

if [ "`which xdg-open`" ]; then
	alias open="xdg-open"
fi

alias make="make -j\$(nproc)"

if [ "`which bc`" ]; then 
	alias head="head -n \$(echo \$(tput lines)-2|bc)"
	alias tail="tail -n \$(echo \$(tput lines)-2|bc)"
fi


alias cd..="cd .."
alias ..="cd .."
