[push]
	default = simple

[alias]
	changed = diff --name-only
	stat = status
	ci = commit
	co = checkout
	rh = reset --hard
	ignore = update-index --skip-worktree
	unignore = update-index --no-skip-worktree
	ignored = !git ls-files -v | grep \"^S\"
	b = !~/bin/git/branch
	save = !~/bin/git/save
	note = !~/bin/git/notes
	reload-hooks = !~/bin/git/reload-hooks
[merge]
	tool = vimdiff
[core]
	editor = vim
	excludesfile = /home/chris/.gitignore_global
[init]
	templatedir = /home/chris/.git_template
